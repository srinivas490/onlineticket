<h1>Listing trains</h1>

<table>
  <thead>
    <tr>
      <th>Trainname</th>
      <th>Location</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Time</th>
      <th>Numberofseats</th>
      <th>Totalamount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.trainname %></td>
        <td><%= train.location %></td>
        <td><%= train.destination %></td>
        <td><%= train.date %></td>
        <td><%= train.time %></td>
        <td><%= train.numberofseats %></td>
        <td><%= train.totalamount %></td>
        <td><%= link_to 'Show', train %></td>
        <td><%= link_to 'Edit', edit_train_path(train) %></td>
        <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

